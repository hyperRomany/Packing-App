<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:id="@+id/main_linear_of_item"
android:background="@color/linear_header_bg">
    <TextView
        android:id="@+id/txt_nu"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_for_text_of_app"
        />

        <CheckBox
            android:id="@+id/checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
           />




        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="الباركود"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size_for_text_of_app"
            android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_barcodeData"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/barcode_data"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_for_text_of_app"
        android:textColor="@color/white"/>
    <!--<TextView
        android:id="@+id/txt_qty"
